<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.currency_converter.ConverterController"
      spacing="15" alignment="CENTER">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- input -->
    <HBox spacing="10" alignment="CENTER">
        <Label text="Amount:"/>
        <TextField fx:id="amountField" promptText="Enter amount" HBox.hgrow="ALWAYS"/>
    </HBox>


    <HBox spacing="10" alignment="CENTER">
        <Label text="From:"/>
        <ComboBox fx:id="fromCurrency" prefWidth="100" HBox.hgrow="ALWAYS"/>
        <Label text="To:"/>
        <ComboBox fx:id="toCurrency" prefWidth="100" HBox.hgrow="ALWAYS"/>
    </HBox>

    <!-- convert button -->
    <Button text="Convert" onAction="#handleConvert" maxWidth="150"/>

    <!--result-->
    <Label fx:id="resultLabel" text="" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <!-- history button -->
    <Button text="View History" onAction="#handleViewHistory" maxWidth="150"/>

</VBox>
